---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import NoteCard from "../../components/NoteCard.astro";

const resources = [
    {
        title: "Lighting 101",
        description:
            "The 3-point lighting setup that makes any camera look cinematic.",
        category: "Production",
        href: "/notes/lighting-101",
        icon: "üí°",
        color: "var(--accent-indigo)",
    },
    {
        title: "Editing Workflow",
        description:
            "How to organize your footage and cut 2x faster in Premiere/Davinci.",
        category: "Post-Production",
        href: "/notes/editing-workflow",
        icon: "‚úÇÔ∏è",
        color: "var(--accent-indigo)",
    },
    {
        title: "YouTube Thumbnails",
        description:
            "The psychology of clicks and how to design high-CTR titles and thumbs.",
        category: "Growth",
        href: "/notes/thumbnails",
        icon: "üñºÔ∏è",
        color: "var(--accent-indigo)",
    },
    {
        title: "Camera Gear Guide",
        description:
            "Stop wasting money on gear. Here is the minimal effective kit for 2024.",
        category: "Gear",
        href: "/notes/camera-gear",
        icon: "üì∏",
        color: "var(--accent-indigo)",
    },
];
---

<Layout title="Video Focus">
    <Navbar />

    <main>
        <section class="hero-minimal">
            <div class="container">
                <div
                    class="badge hand-drawn"
                    style="background-color: var(--accent-indigo); color: white;"
                >
                    Focus Domain
                </div>
                <h1>Mastering <span class="highlight-indigo">Video</span></h1>
                <p class="lead">
                    Strategies for lighting, framing, editing, and storytelling
                    through the lens.
                </p>
            </div>
        </section>

        <section class="content-grid-section">
            <div class="container">
                <div class="notes-grid">
                    {resources.map((note) => <NoteCard {...note} />)}
                </div>
            </div>
        </section>

        <section class="cta-banner">
            <div class="container">
                <div class="banner-box box-border shadow-offset">
                    <div class="banner-content">
                        <h3>Ready to film?</h3>
                        <p>Get our free video checklist.</p>
                    </div>
                    <a href="/subscribe" class="btn btn-primary"
                        >Get Checklist</a
                    >
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    main {
        padding-bottom: 5rem;
    }

    .hero-minimal {
        padding: 6rem 0 4rem;
        background: white;
        border-bottom: var(--border-width) solid var(--border-color);
        text-align: center;
    }

    .hero-minimal h1 {
        font-size: 3.5rem;
        margin-bottom: 1.5rem;
    }

    .highlight-indigo {
        color: var(--accent-indigo);
        position: relative;
    }

    /* Add underline effect similar to index but consistent color */
    .highlight-indigo::after {
        content: "";
        position: absolute;
        bottom: 5px;
        left: 0;
        width: 100%;
        height: 15px;
        background: var(--accent-indigo);
        opacity: 0.2;
        z-index: -1;
    }

    .lead {
        font-size: 1.4rem;
        color: var(--text-secondary);
        max-width: 700px;
        margin: 0 auto;
    }

    .badge {
        display: inline-block;
        padding: 0.2rem 0.8rem;
        border: var(--border-width) solid var(--border-color);
        margin-bottom: 1.5rem;
        transform: rotate(-2deg);
        font-weight: 800;
    }

    .content-grid-section {
        padding: 6rem 0;
    }

    .notes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 3rem;
    }

    .cta-banner {
        padding: 2rem 0 6rem;
    }

    .banner-box {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 3rem 4rem;
        background: var(--accent-indigo); /* Matching theme */
        color: white; /* Contrast text */
        gap: 2rem;
    }

    .banner-box .btn-primary {
        background: white;
        color: var(--text-primary);
        border: 2px solid var(--text-primary);
    }

    .banner-box .btn-primary:hover {
        box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.2);
        transform: translateY(-2px);
    }

    /* Override text color in banner for dark background */
    .banner-content p {
        font-weight: 600;
        color: rgba(255, 255, 255, 0.9);
    }

    .banner-content h3 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    @media (max-width: 900px) {
        .banner-box {
            flex-direction: column;
            text-align: center;
            padding: 3rem 2rem;
        }
    }

    @media (max-width: 768px) {
        .hero-minimal h1 {
            font-size: 2.5rem;
        }
    }
</style>
