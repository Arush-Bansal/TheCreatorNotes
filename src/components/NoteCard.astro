---
interface Props {
  title: string;
  description: string;
  category: string;
  href: string;
  icon?: string;
  color?: string;
}

const { title, description, category, href, icon = "üìù", color = "var(--accent-red)" } = Astro.props;
---

<a href={href} class="note-card box-border shadow-offset">
  <!-- Taped-on style tag -->
  <div class="card-tag hand-drawn" style={`background-color: ${color}; transform: rotate(${Math.random() * 4 - 2}deg);`}>
    <span class="tape-left"></span>
    {category}
    <span class="tape-right"></span>
  </div>
  
  <div class="card-inner">
    <div class="icon-section">
      <span class="icon">{icon}</span>
    </div>

    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
    
    <div class="card-footer">
      <div class="read-action">
        <span class="read-text">Read</span>
        <div class="arrow-circle" style={`background-color: ${color}`}>
          <span class="arrow">‚Üí</span>
        </div>
      </div>
    </div>
  </div>
</a>

<style>
  .note-card {
    display: flex;
    flex-direction: column;
    padding: 2.5rem 2rem 2rem;
    position: relative;
    height: 100%;
    background: white;
    transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    text-decoration: none;
    color: inherit;
  }

  .card-tag {
    position: absolute;
    top: -10px;
    left: 20px;
    padding: 0.3rem 1rem;
    border: var(--border-width) solid var(--border-color);
    font-size: 0.8rem;
    font-weight: normal;
    text-transform: uppercase;
    color: white;
    box-shadow: 2px 2px 0px var(--border-color);
    z-index: 5;
  }

  /* Decorative "tape" effect */
  .tape-left, .tape-right {
    position: absolute;
    top: 50%;
    width: 10px;
    height: 60%;
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-50%);
  }
  .tape-left { left: 4px; }
  .tape-right { right: 4px; }

  .icon-section {
    margin-bottom: 1.5rem;
    font-size: 2.5rem;
  }

  .card-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
    line-height: 1.2;
  }

  .card-description {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    flex-grow: 1;
    line-height: 1.5;
  }

  .card-footer {
    display: flex;
    justify-content: flex-end;
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(0,0,0,0.05);
  }

  .read-action {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .read-text {
    font-weight: 800;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-primary);
  }

  .arrow-circle {
    width: 36px;
    height: 36px;
    min-width: 36px; /* Prevent squishing */
    border: var(--border-width) solid var(--border-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    box-shadow: 2px 2px 0px var(--border-color);
  }

  .arrow {
    font-size: 1.2rem;
    line-height: 1;
  }

  .note-card:hover .read-action {
    transform: translateX(5px);
  }

  .note-card:hover .arrow-circle {
    background-color: var(--text-primary) !important;
  }
</style>
