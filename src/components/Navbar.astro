---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/start-here", label: "Start Here", isSpecial: true },
  { href: "/strategies", label: "Strategies" },
  { href: "/tools", label: "Tools" },
];
---

<header class="navbar">
  <div class="container nav-container">
    <a href="/" class="logo">
      The<span class="logo-red">Creator</span>Notes
    </a>

    <div class="nav-menu">
      <nav class="nav-links">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class={`nav-link ${link.isSpecial ? "special-link" : ""}`}
            >
              {link.label}
            </a>
          ))
        }
      </nav>

      <div class="nav-actions">
        <a href="/subscribe" class="btn btn-primary">Join Now</a>
      </div>
    </div>

    <button class="mobile-menu-toggle" aria-label="Toggle Menu">
      <span class="bar top"></span>
      <span class="bar middle"></span>
      <span class="bar bottom"></span>
    </button>
  </div>
</header>

<style>
  .navbar {
    background: var(--bg-secondary);
    border-bottom: var(--border-width) solid var(--border-color);
    height: 80px;
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .nav-menu {
    display: contents;
  }

  .logo {
    font-size: 1.75rem;
    font-weight: 900;
    letter-spacing: -0.04em;
    color: var(--text-primary);
    z-index: 1001; /* Keep logo above menu */
    position: relative;
  }

  .logo-red {
    color: var(--accent-red);
  }

  .nav-actions .btn-primary {
    color: #ffffff !important;
  }

  .nav-links {
    display: flex;
    gap: 2.5rem;
    align-items: center;
  }

  .nav-link {
    font-weight: 700;
    font-size: 0.95rem;
    color: var(--text-primary);
    position: relative;
    font-family: var(--font-heading);
  }

  .nav-link:hover {
    color: var(--accent-red);
  }

  .special-link {
    background: var(--accent-yellow);
    padding: 0.4rem 0.8rem;
    border: var(--border-width) solid var(--border-color);
    box-shadow: 2px 2px 0px var(--border-color);
    border-radius: var(--radius-sm);
  }

  .special-link:hover {
    transform: translate(-1px, -1px);
    box-shadow: 3px 3px 0px var(--border-color);
    color: var(--text-primary);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 22px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1001;
    position: relative;
  }

  .bar {
    width: 100%;
    height: 3px;
    background-color: var(--text-primary);
    transition: all 0.3s ease;
    border-radius: 99px;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .nav-container {
      /* Remove wrap, we want logo left, toggle right */
      flex-wrap: nowrap;
    }

    .nav-menu {
      display: flex;
      flex-direction: column;
      position: fixed;
      top: 80px; /* Match navbar height */
      left: 0;
      width: 100%;
      height: calc(100vh - 80px);
      background-color: var(--bg-primary);
      padding: 2rem 1.5rem;
      align-items: center;
      justify-content: start;
      gap: 2rem;
      transform: translateX(100%);
      transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      border-top: var(--border-width) solid var(--border-color);
      overflow-y: auto;
    }

    .navbar.active .nav-menu {
      transform: translateX(0);
    }

    .nav-links {
      flex-direction: column;
      width: 100%;
      gap: 1.5rem;
    }

    .nav-link {
      font-size: 1.5rem;
      width: 100%;
      text-align: center;
      padding: 0.5rem;
      border-radius: var(--radius-md);
    }

    .nav-link:not(.special-link):hover {
      background-color: rgba(0, 0, 0, 0.05);
    }

    .special-link {
      width: 100%;
      max-width: 300px;
      text-align: center;
      padding: 0.75rem;
      font-size: 1.25rem;
      box-shadow: 4px 4px 0px var(--border-color);
    }

    .mobile-menu-toggle {
      display: flex;
    }

    /* Hamburger Animation */
    .navbar.active .bar.top {
      transform: translateY(9px) rotate(45deg);
    }

    .navbar.active .bar.middle {
      opacity: 0;
    }

    .navbar.active .bar.bottom {
      transform: translateY(-10px) rotate(-45deg); /* Adjusted for height */
    }

    .nav-actions {
      width: 100%;
      display: flex;
      justify-content: center;
      margin-top: auto; /* Push to bottom slightly, or just flow naturally */
      padding-bottom: 2rem;
    }

    .nav-actions .btn {
      width: 100%;
      max-width: 300px;
      text-align: center;
      padding: 1rem;
      font-size: 1.25rem;
    }
  }
</style>

<script>
  const mobileMenuToggle = document.querySelector(".mobile-menu-toggle");
  const navbar = document.querySelector(".navbar");
  const navMenu = document.querySelector(".nav-menu");

  if (mobileMenuToggle && navbar) {
    mobileMenuToggle.addEventListener("click", (e) => {
      e.stopPropagation();
      navbar.classList.toggle("active");
      const isExpanded = navbar.classList.contains("active");
      mobileMenuToggle.setAttribute(
        "aria-expanded",
        isExpanded ? "true" : "false",
      );

      // Prevent body scroll when menu is open
      document.body.style.overflow = isExpanded ? "hidden" : "";
    });

    // Close menu when clicking outside (on the content, though it covers screen now)
    // Or clicking a link
    if (navMenu) {
      navMenu.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
          navbar.classList.remove("active");
          mobileMenuToggle.setAttribute("aria-expanded", "false");
          document.body.style.overflow = "";
        });
      });
    }
  }
</script>
