---
interface Step {
  title: string;
  description: string;
  href: string;
  icon: string;
}

interface Props {
  steps: Step[];
}

const { steps } = Astro.props;
---

<div class="roadmap-container">
  <div class="roadmap-line">
    <svg width="100%" height="100%" preserveAspectRatio="none">
      <path id="path" d="M 50,0 C 50,200 50,200 50,1000" stroke="var(--border-color)" stroke-width="4" stroke-dasharray="8 8" fill="none" />
    </svg>
  </div>

  <div class="steps-list">
    {steps.map((step, index) => (
      <div class={`step-item ${index % 2 === 0 ? 'left' : 'right'}`}>
        <div class="step-point">
          <div class="point-inner box-border shadow-offset">
            {step.icon}
          </div>
        </div>
        
        <a href={step.href} class="step-card box-border shadow-offset">
          <div class="step-number hand-drawn">Step {index + 1}</div>
          <h3>{step.title}</h3>
          <p>{step.description}</p>
          <span class="step-link">Read Guide â†’</span>
        </a>
      </div>
    ))}
  </div>
</div>

<style>
  .roadmap-container {
    position: relative;
    padding: 4rem 0;
    max-width: 900px;
    margin: 0 auto;
  }

  .roadmap-line {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 4px;
    transform: translateX(-50%);
    z-index: 1;
    pointer-events: none;
  }

  .steps-list {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 6rem;
  }

  .step-item {
    display: flex;
    align-items: center;
    width: 100%;
    position: relative;
  }

  .step-point {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
  }

  .point-inner {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent-yellow);
    font-size: 1.2rem;
  }

  .step-card {
    width: 40%;
    padding: 2rem;
    background: white;
    text-align: left;
    transition: transform 0.2s ease;
  }

  .step-item.left .step-card {
    margin-right: auto;
    margin-left: 0;
  }

  .step-item.right .step-card {
    margin-left: auto;
    margin-right: 0;
  }

  .step-number {
    font-size: 0.8rem;
    color: var(--accent-red);
    margin-bottom: 0.5rem;
  }

  .step-card h3 {
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
  }

  .step-card p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }

  .step-link {
    font-weight: 800;
    font-size: 0.8rem;
    color: var(--accent-red);
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .roadmap-line {
      left: 30px;
    }
    .step-point {
      left: 30px;
    }
    .step-card {
      width: calc(100% - 80px);
      margin-left: 80px !important;
    }
  }
</style>
